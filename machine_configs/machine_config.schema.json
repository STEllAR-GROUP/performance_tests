{
    "type":"object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required":true,
    "additionalProperties":false,
    "properties":{
        "machine_name": {
            "type":"string",
            "required":true
        },
        "invocation_command": {
            "type":"string",
            "required":true
        },
        "invoke_parallel": {
            "type":"boolean",
            "required":true
        },
        "builds": {
            "type":"array",
            "required":true,
            "items":
                {
                    "type":"object",
                    "required":true,
                    "additionalProperties":false,
                    "properties":{
                        "compiler": {
                            "type":"string",
                            "required":"true"
                        },
                        "boost": {
                            "type":"string",
                            "required":"true"
                        },
                        "allocator": {
                            "type":"string",
                            "required":"true"
                        },
                        "branch": {
                            "type":"string",
                            "required":"true"
                        },
                        "folder": {
                            "type":"string",
                            "required":"true"
                        }
                    }
                }
        },
        "configurations": {
            "type":"array",
            "required":true,
            "items":
                {
                    "type":"array",
                    "required":true,
                    "maxItems":3,
                    "minItems":3,
                    "items":
                        {
                            "type":"number",
                            "required":true
                        }
                }
        }
    }
}

